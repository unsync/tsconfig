{
	"name": "@unsync/tsconfig",
	"version": "1.0.12",
	"description": "Shared TypeScript config for my projects",
	"license": "MIT",
	"repository": "unsync/tsconfig",
	"main": "tsconfig.json",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"release:patch": "npm version -m 'release:patch' patch",
		"release:minor": "npm version -m 'release:minor' minor",
		"release:major": "npm version -m 'release:major' major",
		"postinstall": "node scripts/postinstall.cjs"
	},
	"files": [
		"tsconfig.json",
		"scripts/postinstall.cjs"
	],
	"keywords": [
		"tsconfig",
		"typescript",
		"ts",
		"config",
		"configuration"
	]
}
